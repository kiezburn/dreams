<%= content_for :head do %>
  <title><%= t(:browser_title_tag) %></title>
<% end %>

<% @can_edit = true %>

<%= simple_form_for @camp, :html => {:dir => I18n.t(:html_direction), id: 'createDreamForm'} do |form| %>
  <div class="header-heading col-xs-12" style='float: <%= I18n.t(:lang_direction) %>'>
    <%= t("form_basics_headline") %>
  </div>

  <div class="combo col-md-7 col-xs-12" id="name" style='float: <%= I18n.t(:lang_direction) %>'>
    <%= form.input :name, label: t("form_dream_name_label"),
      maxlength: 64, input_html: {class: "form-control"} %>
  </div>

  <div class="combo col-md-7 col-xs-12" id="subtitle" style='float: <%= I18n.t(:lang_direction) %>'>
    <%= form.input :subtitle, label: t("form_subtitle_label"), input_html: { rows: 10 } %>
    <%= t("form_subtitle_guidetext_html") %>
  </div>

  <div class="combo col-md-7 col-xs-12" id="contact_name" style='float: <%= I18n.t(:lang_direction) %>'>
    <%= form.label t("form_creator_name_label") %>
    <%= form.text_field :contact_name, maxlength: 64, class: "form-control" %>
    <%= t("form_creator_name_guidetext_html") %>
    <br>
  </div>

  <div>

  <% if Rails.configuration.x.firestarter_settings["budgetplan"] %>
    <div class="combo col-md-7 col-xs-12" id="budgetplan" style='float: <%= I18n.t(:lang_direction) %>'>
      <%= form.label t("form_budgetplan_label") %>
      <%= form.text_area :budgetplan, :maxlength => 1024, :class => "form-control" %>
      <%= t("form_budgetplan_guidetext_html") %>
      <br>
    </div>
  <% end %>

  <% if Rails.configuration.x.firestarter_settings["electricity"] %>
    <div class="combo col-md-7 col-xs-12" id="electricity" style='float: <%= I18n.t(:lang_direction) %>'>
      <%= form.label t("form_electricity_label") %>
      <%= form.text_area :electricity, :maxlength => 1024, :class => "form-control" %>
      <%= t("form_electricity_guidetext_html") %>
      <br>
    </div>
  <% end %>

  <% if Rails.configuration.x.firestarter_settings["fire"] %>
  <div class="combo col-md-7 col-xs-12" id="fire" style='float: <%= I18n.t(:lang_direction) %>'>
    <%= form.label t("form_fire_label") %>
    <%= form.text_area :fire, :maxlength => 1024, :class => "form-control" %>
    <%= t("form_fire_guidetext_html") %>
    <br>
  </div>
  <% end %>

  <% if Rails.configuration.x.firestarter_settings["noise"] %>
  <div class="combo col-md-7 col-xs-12" id="noise" style='float: <%= I18n.t(:lang_direction) %>'>
    <%= form.label t("form_noise_label") %>
    <%= form.text_area :noise, :maxlength => 1024, :class => "form-control" %>
    <%= t("form_noise_guidetext_html") %>
    <br>
  </div>
  <% end %>

  <% if Rails.configuration.x.firestarter_settings["neighbors"] %>
  <div class="combo col-md-7 col-xs-12" id="neighbors" style='float: <%= I18n.t(:lang_direction) %>'>
    <%= form.label t("form_neighbors_label") %>
    <%= form.text_area :neighbors, :maxlength => 1024, :class => "form-control" %>
    <%= t("form_neighbors_guidetext_html") %>
    <br>
  </div>
  <% end %>

  <% if Rails.configuration.x.firestarter_settings["water"] %>
  <div class="combo col-md-7 col-xs-12" id="water" style='float: <%= I18n.t(:lang_direction) %>'>
    <%= form.label t("form_water_label") %>
    <%= form.text_area :water, :maxlength => 1024, :class => "form-control" %>
    <%= t("form_water_guidetext_html") %>
    <br>
  </div>
  <% end %>

  <div class="submit col-xs-12">
    <%= form.submit t(:create_dream), class: 'btn btn-success create-new-dream', data:{toggle: 'tooltip'}, title:'Creating your new dream' %>
    <span class='loading-new-dream hideme'>
      <%= t("create_dream_loading_text") %>
    </span>
  </div>
<% end %>
